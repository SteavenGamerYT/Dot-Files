# GIT FIX
gitpush() {
    git add .
    git commit -m "$*"
    git pull
    git push
}
gitupdate() {
    eval "$(ssh-agent -s)"
    ssh-add ~/.ssh/github
    ssh -T git@github.com
}
git-push() {
	git add .
	git commit -m "$1"
	git push
}
gitcommit() {
        git add .
        git commit -m "$1"
}

alias gp=gitpush
alias gu=gitupdate
cdgit() {
        cd ~/Documents/GitHub/"$1"
}
