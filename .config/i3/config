# Set Mod key
set $mod Mod4

# Set font
font pango:Roboto Regular 10

# Autodetect and configure touchpad and mouse settings
exec_always --no-startup-id ~/.config/i3/touchpad-mouse-config.sh

# Dual Monitors settings
#exec_always --no-startup-id ~/.config/i3/setup-moanitors.sh
#exec_always --no-startup-id xrandr --output DVI-D-0 --off --output HDMI-0 --mode 1366x768 --pos 0x0 --rotate normal --output DP-0 --off --output DP-1 --primary --mode 1920x1080 --pos 0x768 --rotate normal
exec_always --no-startup-id xrandr --output DVI-D-0 --mode 1920x1080 --pos 0x768 --rotate normal --output HDMI-0 --mode 1366x768 --pos 0x0 --rotate normal --output DP-0 --off --output DP-1 --primary --mode 1920x1080 --pos 0x768 --rotate normal

# Startup
exec_always --no-startup-id flatpak run io.mpv.Mpv --no-video "$(find ~/Audio/mp3/Sounds/startup -type f | sort -R | head -n 1)"

# Theme
exec --no-startup-id gsettings set org.gnome.desktop.interface cursor-theme 'WhiteSur-cursors'
exec --no-startup-id gsettings set org.gnome.desktop.interface gtk-theme 'Nordic'
exec --no-startup-id gsettings set org.gnome.desktop.interface cursor-size 24
exec --no-startup-id gsettings set org.gnome.desktop.interface icon-theme 'Papirus-Dark'

# System Utitles
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id /usr/lib/pam_kwallet_init
exec --no-startup-id xidlehook --not-when-fullscreen --not-when-audio --timer 300 'betterlockscreen -l' ''
exec --no-startup-id picom
exec --no-startup-id nm-applet
exec --no-startup-id /usr/lib/kdeconnectd
exec --no-startup-id dunst
exec --no-startup-id numlockx on
exec --no-startup-id ~/.config/i3/wallpaper2.sh &
exec --no-startup-id flatpak run --command=easyeffects com.github.wwmm.easyeffects --gapplication-service
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Applications
exec --no-startup-id flatpak run --branch=stable --arch=x86_64 --command=com.discordapp.Discord com.discordapp.Discord --start-minimized
exec --no-startup-id flatpak run --branch=stable --arch=x86_64 --command=/app/bin/steam --file-forwarding com.valvesoftware.Steam -silent
exec --no-startup-id dropbox
exec --no-startup-id /opt/freedownloadmanager/fdm --hidden
exec --no-startup-id flatpak run --branch=stable --arch=x86_64 --command=qbittorrent --file-forwarding org.qbittorrent.qBittorrent

# Keybindings
bindsym $mod+l exec betterlockscreen -l
bindsym $mod+Return exec kitty
bindsym $mod+x exec kitty
bindsym $mod+b exec "flatpak run org.mozilla.firefox"
bindsym $mod+z exec nemo
bindsym $mod+Shift+q kill
bindsym $mod+d exec "rofi -modi drun,run -show drun -theme ~/.config/polybar/scripts/rofi/nord.rasi"
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Screenshots
bindsym --release Print exec scrot "$HOME/Pictures/Screenshots/%Y-%m-%d_%H-%M-%S.png" -e 'xclip -selection clipboard -target image/png -i $f' && notify-send "Screenshot taken"
bindsym --release $mod+Shift+s exec flameshot gui -p ~/Pictures/Screenshots -c

# Switch between English (US) and Arabic (Egypt) keyboard layouts
exec_always "setxkbmap -layout us,ara -option grp:alt_shift_toggle,grp:alt_caps_toggle,grp:ctrl_space_toggle"

# Resize mode
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        #bindsym $mod+r mode "default"
}
#bindsym $mod+r mode "resize"

